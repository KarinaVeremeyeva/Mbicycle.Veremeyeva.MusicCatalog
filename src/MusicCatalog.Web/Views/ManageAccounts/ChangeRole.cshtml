@model UserViewModel
@{
    ViewData["Title"] = Localizer["Title"];
}
<h3>@Localizer["Header"]</h3>
<form asp-action="ChangeRole">
    <div class="form-horizontal">
        <hr />
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Role" class="col-md-2 control-label">@Localizer["Role"]</label>
            <div class="col-md-6">
                <select asp-for="Role" class="form-control" asp-items="ViewBag.Role">
                    <option value="" class="form-control">@Localizer["SelectRole"]</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to list"]</a>
            </div>
        </div>
    </div>
</form>
