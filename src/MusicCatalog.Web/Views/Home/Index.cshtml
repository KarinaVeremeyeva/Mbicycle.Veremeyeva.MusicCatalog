@model IEnumerable<Song>
@{
    ViewData["Title"] = "Music catalog";
}
<h3>Songs list</h3>
<p>
    @Html.ActionLink("Create song", "Create", "Songs", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">№</th>
            <th scope="col">Name</th>
            <th scope="col">Genre</th>
            <th scope="col">Performer</th>
            <th scope="col">Album</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var song in Model)
    {
        <tr>
            <td>@song.SongId</td>
            <td>@song.Name</td>
            <td>@song.GenreId</td>
            <td>@song.PerformerId</td>
            <td>@song.AlbumId</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = song.SongId })
                @Html.ActionLink("Delete", "Delete", new { id = song.SongId })
            </td>
        </tr>
     }
</table>
