@model SongViewModel
@{
    ViewData["Title"] = Localizer["Title"];
}
<h3>@Localizer["CreateHeader"]</h3>
<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="Name" class="col-md-4 control-label">@Localizer["Name"]</label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GenreId" class="col-md-4 control-label">@Localizer["Genre"]</label>
            <div class="col-md-8">
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId">
                    <option value="" class="form-control">-- Select genre --</option>
                </select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>   
        </div>
        <div class="form-group">
            <label asp-for="PerformerId" class="col-md-4 control-label">@Localizer["Performer"]</label>
            <div class="col-md-8">
                <select asp-for="PerformerId" class="form-control" asp-items="ViewBag.PerformerId">
                    <option value="" class="form-control">-- Select performer --</option>
                </select>
                <span asp-validation-for="PerformerId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AlbumId" class="col-md-4 control-label">@Localizer["Album"]</label>
            <div class="col-md-8">
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId">
                    <option value="" class="form-control">-- Select album --</option>
                </select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-outline-primary">
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to list"]</a>
            </div>
        </div>
    </div>
</form>