@model SongViewModel
@{
    ViewData["Title"] = Localizer["Title"];
}
<h3>@Localizer["Header"]</h3>
<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <input type="hidden" asp-for="SongId" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label">@Localizer["Name"]</label>
            <div class="col-md-8">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GenreName" class="col-md-2 control-label">@Localizer["Genre"]</label>
            <div class="col-md-8">
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId">
                    <option value="" class="form-control">-- Select genre --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PerformerName" class="col-md-2 control-label">@Localizer["Performer"]</label>
            <div class="col-md-8">
                <select asp-for="PerformerId" class="form-control" asp-items="ViewBag.PerformerId">
                    <option value="" class="form-control">-- Select performer --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AlbumName" class="col-md-2 control-label">@Localizer["Album"]</label>
            <div class="col-md-8">
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId">
                    <option value="" class="form-control">-- Select album --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to list"]</a>
            </div>
        </div>
    </div>
</form>
