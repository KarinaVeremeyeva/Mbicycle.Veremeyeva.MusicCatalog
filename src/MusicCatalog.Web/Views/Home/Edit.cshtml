@model SongViewModel
@{
    ViewData["Title"] = Localizer["Title"];
}
<h3>@Localizer["Header"]</h3>
<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <input type="hidden" asp-for="SongId" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label">@Localizer["Name"]</label>
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GenreName" class="col-md-2 control-label">@Localizer["Genre"]</label>
            <div class="col-md-6">
                <select asp-for="GenreId" class="form-control" asp-items="ViewBag.GenreId">
                    <option value="" class="form-control">@Localizer["SelectGenre"]</option>
                </select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PerformerName" class="col-md-2 control-label">@Localizer["Performer"]</label>
            <div class="col-md-6">
                <select asp-for="PerformerId" class="form-control" asp-items="ViewBag.PerformerId">
                    <option value="" class="form-control">@Localizer["SelectPerformer"]</option>
                </select>
                <span asp-validation-for="PerformerId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AlbumName" class="col-md-2 control-label">@Localizer["Album"]</label>
            <div class="col-md-6">
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId">
                    <option value="" class="form-control">@Localizer["SelectAlbum"]</option>
                </select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">@Localizer["Back to list"]</a>
            </div>
        </div>
    </div>
</form>
